/var/log/syslog
/var/log/daemon.log
{
	rotate 7
	daily
	maxsize 1M
	missingok
	notifempty
	delaycompress
	compress
	postrotate
		systemctl kill -s HUP rsyslog.service > /dev/null
	endscript
}

/var/log/mail.info
/var/log/mail.warn
/var/log/mail.err
/var/log/mail.log
/var/log/kern.log
/var/log/auth.log
/var/log/user.log
/var/log/lpr.log
/var/log/cron.log
/var/log/debug
/var/log/messages
{
	rotate 4
	weekly
	missingok
	notifempty
	compress
	delaycompress
	sharedscripts
	postrotate
		systemctl kill -s HUP rsyslog.service > /dev/null
	endscript
}
