#!/bin/sh

NORMALDIR="$1"
EARLYDIR="$2"
LATEDIR="$3"

ACTIVESLOT="$(sed 's/.*rauc\.slot=\([AB]\).*/\1/' /proc/cmdline)"

if [ "$ACTIVESLOT" = "A" ]; then
	cat <<-EOF > "$NORMALDIR/var-log.mount"
	[Unit]
	Description=Log File System (A)
	
	[Mount]
	What=/dev/mmcblk0p6
	Where=/var-log
	EOF
else
	cat <<-EOF > "$NORMALDIR/var-log.mount"
	[Unit]
	Description=Log File System (B)
	
	[Mount]
	What=/dev/mmcblk0p7
	Where=/var-log
	EOF
fi

mkdir -p "$NORMALDIR/sysinit.target.wants"
ln -s ../var-log.mount "$NORMALDIR/sysinit.target.wants"
